<table>
    <thead>
        <tr>
            <th>投稿者名</th>
            <th>本文</th>
        </tr>
    </thead>
    <tbody>
        <% @posts.each do |post| %>
            <tr>
                <td><%= post.user.name %></td>
                <td><%= post.body %></td>
                <% if post.user == current_user %>
                <td><%= link_to "編集", edit_post_path(post) %></td>　　　　　　　  
                <td><%= link_to "削除", post_path(post), method: :delete %></td>
              <% else %>
                <td></td>
                <td></td>
              <% end %>            
            </tr>
        <% end %>
    </tbody>
</table>